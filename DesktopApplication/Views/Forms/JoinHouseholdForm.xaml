<Page
    x:Class="DesktopApplication.Views.Forms.JoinHouseholdForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock x:Name="NoJoinCodeError" Margin="0,0,0,5" HorizontalAlignment="Center" 
                   Foreground="{StaticResource ErrorForegroundBrush}" FontWeight="Bold" Visibility="Collapsed"/>
        <TextBox x:Name="txtJoinCode" PlaceholderText="Enter Join Code" HorizontalAlignment="Center" Width="250"
                 Text="{x:Bind ViewModel.JoinCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
    </StackPanel>
</Page>
